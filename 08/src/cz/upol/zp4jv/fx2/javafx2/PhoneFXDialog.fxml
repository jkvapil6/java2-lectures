<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<GridPane fx:controller="cz.upol.zp4jv.fx2.NewContactController" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="20" vgap="10">
	<Text text="New Contact" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 20pt" />
	
	<Text text="Name"  GridPane.rowIndex="1" GridPane.columnIndex="0" />
	<TextField fx:id="txtName" GridPane.rowIndex="1" GridPane.columnIndex="1" />
	
	<Text text="Phone"  GridPane.rowIndex="2" GridPane.columnIndex="0" />
	<TextField fx:id="txtPhone" GridPane.rowIndex="2" GridPane.columnIndex="1" />
	
	<Text fx:id="lbNotification" text="" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" />
	
	<HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2">
		<Button text="Ok" onAction="#okAction" defaultButton="true" />
		<Button text="Cancel" onAction="#cancelAction" cancelButton="true" />
	</HBox>
	
</GridPane>

