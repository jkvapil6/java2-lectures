<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<GridPane fx:controller="cz.upol.zp4jv.fx2.ExplainController" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="20" vgap="10">

    <VBox fx:id="boxLbs" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <Label wrapText="true" text="Program shifts alphabet position of all characters in text by shift value. Encode shifts forward, decode backward."/>
        <Label fx:id="lbInfo" wrapText="true" />
        <Label fx:id="lbInfoAll" wrapText="true" />
    </VBox>
	<HBox spacing="10" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2">

		<Button text="Understand" onAction="#cancelAction" defaultButton="true" />
	</HBox>
	
</GridPane>

